---
import "../styles/global.css";
import CurrentState from "../components/CurrentState.astro";
import Hero from "../components/Hero.astro";
import InitiativeScope from "../components/InitiativeScope.astro";
import OriginStory from "../components/OriginStory.astro";
import Principles from "../components/Principles.astro";
import SecurityPosture from "../components/SecurityPosture.astro";
import SiteFooter from "../components/SiteFooter.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta
      name="description"
      content="leter.net is a privately administered personal domain used for discretionary communication. Email routing is handled via a third-party provider. No public services are offered."
    />
    <meta name="theme-color" content="#050505" />

    <meta property="og:type" content="website" />
    <meta property="og:site_name" content="leter.net" />
    <meta property="og:url" content="https://leter.net/" />
    <meta property="og:title" content="leter.net | Private Domain Infrastructure" />
    <meta
      property="og:description"
      content="Privately administered personal domain used for discretionary communication. Email routing is handled via a third-party provider."
    />
    <meta property="og:image" content="https://leter.net/og-image.png" />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:image:alt" content="leter.net private domain infrastructure overview" />

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="leter.net | Private Domain Infrastructure" />
    <meta
      name="twitter:description"
      content="Privately administered personal domain used for discretionary communication. Email routing is handled via a third-party provider."
    />
    <meta name="twitter:image" content="https://leter.net/og-image.png" />

    <title>leter.net | Private Domain Infrastructure</title>
  </head>
  <body>
    <main class="min-h-screen">
      <Hero />
      <OriginStory />
      <CurrentState />
      <SecurityPosture />
      <InitiativeScope />
      <Principles />
      <SiteFooter />
    </main>
  </body>
</html>
